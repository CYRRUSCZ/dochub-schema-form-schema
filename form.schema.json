{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/CYRRUSCZ/dochub-schema-form/form.schema.json",
    "title": "Form",
    "description": "Vue form json schema for form generator",
    "type": "object",
    "properties": {
        "formId": {
            "description": "Form html id attribute",
            "type": "string"
        },
        "formElements": {
            "description": "array of objects containing form element schema definitions",
            "type": "array",
            "items": {
                "description": "form element item",
                "$ref": "form-element.schema.json#/definitions/formElement"
            },
            "uniqueItems": true
        },
        "submitText": {
            "description": "Text on submit element",
            "type": "string"
        },
        "cancelText": {
            "description": "Text on cancel element",
            "type": "string"
        }
    },
    "required": [
        "formElements",
        "submitText"
    ]
}
