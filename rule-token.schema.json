{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/CYRRUSCZ/dochub-schema-form-schema/refs/heads/master/rule-token.schema.json",
    "title": "Visibility rule token",
    "description": "Vue form element visibility rule token json schema for form generator",
    "type": "object",
    "definitions": {
        "ruleToken": {
            "properties": {
                "tokenType": {
                    "description": "Defines type of token in expression",
                    "type": "string",
                    "enum": [
                        "element",
                        "value",
                        "group",
                        "operator",
                        "investmentProfiles",
                        "investmentCategories",
                        "valueFrom",
                        "arrayFrom",
                        "elementValidity"
                    ]
                },
                "value": {
                    "description": "Value for use in expression",
                    "type": [
                        "number",
                        "boolean",
                        "string"
                    ]
                },
                "valueType": {
                    "description": "Data type of value",
                    "type": "string",
                    "enum": [
                        "string",
                        "boolean",
                        "number"
                    ]
                },
                "selectedValueFrom": {
                    "description": "Selected value from enum",
                    "type": "string"
                },
                "elementId": {
                    "description": "Element id of schema form element",
                    "type": "string"
                },
                "left": {
                    "description": "left side of expression",
                    "$ref": "rule-token.schema.json#/definitions/ruleToken"
                },
                "right": {
                    "description": "right side of expression",
                    "$ref": "rule-token.schema.json#/definitions/ruleToken"
                },
                "operator": {
                    "description": "operator between sides of expression",
                    "$ref": "rule-token.schema.json#/definitions/ruleToken"
                }
            },
            "if": {
                "properties": {
                    "tokenType": {
                        "enum": [
                            "group"
                        ]
                    }
                }
            },
            "then": {
                "required": [
                    "tokenType",
                    "left",
                    "right",
                    "operator"
                ]
            },
            "else": {
                "if": {
                    "properties": {
                        "tokenType": {
                            "enum": [
                                "element",
                                "elementValidity"
                            ]
                        }
                    }
                },
                "then": {
                    "required": [
                        "tokenType",
                        "value",
                        "elementId"
                    ]
                },
                "else": {
                    "if": {
                        "properties": {
                            "tokenType": {
                                "enum": [
                                    "value"
                                ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "tokenType",
                            "value",
                            "valueType"
                        ]
                    },
                    "else": {
                        "if": {
                            "properties": {
                                "tokenType": {
                                    "enum": [
                                        "investmentProfiles",
                                        "investmentCategories"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "required": [
                                "tokenType"
                            ]
                        },
                        "else": {
                            "if": {
                                "properties": {
                                    "tokenType": {
                                        "enum": [
                                            "arrayFrom",
                                            "valueFrom"
                                        ]
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "tokenType",
                                    "selectedValueFrom",
                                    "value"
                                ]
                            },
                            "else": {
                                "required": [
                                    "tokenType",
                                    "value"
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}
